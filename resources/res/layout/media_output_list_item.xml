<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/device_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginBottom="12dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <FrameLayout android:layout_gravity="start|center_vertical" android:id="@+id/item_layout" android:background="@drawable/media_output_item_background" android:layout_width="match_parent" android:layout_height="match_parent">
            <SeekBar android:id="@+id/volume_seekbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:progressDrawable="@drawable/media_output_dialog_seekbar_background" android:thumb="@null" android:paddingStart="0dp" android:paddingEnd="0dp" android:splitTrack="false"/>
        </FrameLayout>
        <FrameLayout android:layout_gravity="start|center_vertical" android:layout_width="56dp" android:layout_height="64dp">
            <ImageView android:layout_gravity="center" android:id="@+id/title_icon" android:layout_width="24dp" android:layout_height="24dp"/>
        </FrameLayout>
        <TextView android:textSize="16sp" android:ellipsize="end" android:layout_gravity="start|center_vertical" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="@android:string/config_wlan_data_service_class" android:layout_marginStart="56dp"/>
        <RelativeLayout android:layout_gravity="start|center_vertical" android:id="@+id/two_line_layout" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginStart="56dp">
            <TextView android:textSize="16sp" android:textColor="@color/media_dialog_inactive_item_main_content" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/two_line_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="@android:string/config_wlan_data_service_class"/>
            <TextView android:textSize="14sp" android:textColor="@color/media_dialog_inactive_item_main_content" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_alignParentBottom="true" android:fontFamily="@android:string/config_deviceSpecificAudioService"/>
        </RelativeLayout>
        <ProgressBar android:layout_gravity="center" android:id="@+id/volume_indeterminate_progress" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:indeterminate="true" android:indeterminateOnly="true" android:layout_marginEnd="16dp" style="?android:attr/progressBarStyleSmallTitle"/>
        <ImageView android:layout_gravity="center" android:id="@+id/media_output_item_status" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:indeterminate="true" android:indeterminateOnly="true" android:importantForAccessibility="no" android:layout_marginEnd="16dp"/>
        <CheckBox android:layout_gravity="center" android:id="@+id/check_box" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:button="@drawable/ic_circle_check_box" android:layout_marginEnd="16dp"/>
    </FrameLayout>
</LinearLayout>
